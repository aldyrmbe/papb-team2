<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team2.foodrecipes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.team2.foodrecipes.view.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.team2.foodrecipes.view.bookmark.BookmarkActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.team2.foodrecipes.view.bookmark.AddNewRecipeActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.team2.foodrecipes.view.home.HomeActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="com.team2.foodrecipes.view.category.CategoryActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:label="Category">
        </activity>

        <activity
            android:name="com.team2.foodrecipes.view.detail.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>